<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('build/style.css') }}">
    </head>
    <body>
        <header>
            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">Flyaround</a>
                    </div>
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="/">Accueil</a></li>
                        <li><a href="{{ path('planemodel_index') }}">Avions</a></li>
                        <li><a href="{{ path('reservation_index') }}">Réservations</a></li>
                        <li><a href="{{ path('flight_index') }}">Vols</a></li>
                        <li><a href="{{ path('site_index') }}">Aéroports</a></li>
                        <li><a href="{{ path('user_index') }}">Utilisateurs</a></li>
                        <li><a href="{{ path('review_index') }}">Avis</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="{{ path('fos_user_registration_register') }}"><span class="glyphicon glyphicon-user"></span> S'inscrire</a></li>
                        <li><a href="{{ path('fos_user_security_login') }}"><span class="glyphicon glyphicon-log-in"></span> Se connecter</a></li>
                    </ul>
                </div>
            </nav>
        </header>
        {% block body %}{% endblock %}
        <script src="{{ asset('build/app.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
